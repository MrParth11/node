        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
          <!-- ============================================================== -->
          <!-- Bread crumb and right sidebar toggle -->
          <!-- ============================================================== -->
          <div class="page-breadcrumb">
            <div class="row">
              <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Form Basic</h4>
                <div class="ml-auto text-right">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="#">Home</a></li>
                      <li class="breadcrumb-item active" aria-current="page">Library</li>
                    </ol>
                  </nav>
                </div>
              </div>
            </div>
          </div>
          <!-- ============================================================== -->
          <!-- End Bread crumb and right sidebar toggle -->
          <!-- ============================================================== -->
          <!-- ============================================================== -->
          <!-- Container fluid  -->
          <!-- ============================================================== -->
          <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
              <div class="col-md-6">
                <div class="card">
                  <form id="addProduct" action="/Admin/AddNewProduct" method="POST" enctype="multipart/form-data">
                    <!-- Product Name -->
                    <div>
                      <label for="name">Product Name:</label>
                      <input type="text" id="name" name="name" required placeholder="Enter product name">
                    </div>

                    <!-- Product Description -->
                    <div>
                      <label for="description">Product Description:</label>
                      <textarea id="description" name="description" required
                        placeholder="Enter product description"></textarea>
                    </div>

                    <!-- Main Category -->
                    <div>
                      <label for="mainCategory">Main Category:</label>
                      <select id="mainCategory" name="mainCategory" required>
                        <option value="" disabled selected>Select Main Category</option>
                        <% mainCategories.forEach(category=> { %>
                          <option value="<%= category._id %>">
                            <%= category.name %>
                          </option>
                          <% }) %>
                      </select>
                    </div>

                    <!-- Category -->
                    <div>
                      <label for="category">Category:</label>
                      <select id="category" name="category" required>
                        <option value="" disabled selected>Select Category</option>
                        <% categories.forEach(category=> { %>
                          <option value="<%= category._id %>">
                            <%= category.name %>
                          </option>
                          <% }) %>
                      </select>
                    </div>

                    <!-- Subcategory -->
                    <div>
                      <label for="subcategory">Subcategory:</label>
                      <select id="subcategory" name="subcategory" required>
                        <option value="" disabled selected>Select Subcategory</option>
                        <% subcategories.forEach(subcat=> { %>
                          <option value="<%= subcat._id %>">
                            <%= subcat.name %>
                          </option>
                          <% }) %>
                      </select>
                    </div>

                    <!-- Price -->
                    <div>
                      <label for="price">Price:</label>
                      <input type="number" id="price" name="price" required placeholder="Enter price" min="0"
                        step="0.01">
                    </div>

                    <!-- Sizes and Size Counts -->
                    <div>
                      <label for="sizes">Sizes (Enter sizes and counts):</label>
                      <div id="sizes-container">
                        <div class="size-field">
                          <input type="text" name="sizes[]" placeholder="Size (e.g., S)" required>
                          <input type="number" name="sizeCounts[]" class="size-count" placeholder="Count (e.g., 10)" min="0" required>
                        </div>
                      </div>
                      <button type="button" onclick="addSizeField()">Add More Sizes</button>
                    </div>

                    <!-- Estimated Delivery -->
                    <div>
                      <label for="estimatedDelivery">Estimated Delivery:</label>
                      <input type="text" id="estimatedDelivery" name="estimatedDelivery" required
                        placeholder="Enter estimated delivery" value="3-5 business days">
                    </div>

                    <!-- Free Shipping -->
                    <div>
                      <label for="freeShipping">Free Shipping:</label>
                      <input type="checkbox" id="freeShipping" name="freeShipping">
                    </div>

                    <!-- Product Images -->
                    <div>
                      <label for="images">Product Images (You can upload multiple):</label>
                      <input type="file" id="images" name="images" multiple accept="image/*">
                    </div>

                    <!-- Submit Button -->
                    <div>
                      <button type="submit">Add Product</button>
                    </div>
                  </form>

                  <script>
                    function addSizeField() {
                      const sizeField = `
                      <div class="size-field">
                        <input type="text" name="sizes[]" placeholder="Size (e.g., S)" required>
                        <input type="number" name="sizeCounts[]" placeholder="Count (e.g., 10)" min="0" required>
                      </div>`;
                      document.getElementById('sizes-container').insertAdjacentHTML('beforeend', sizeField);
                    }
                  </script>


                  <script>
                      function addSizeField() {
    const container = document.getElementById('sizes-container');
    const newField = document.createElement('div');
    newField.classList.add('size-field');
    newField.innerHTML = `
      <input type="text" name="sizes[]" placeholder="Size (e.g., M)" required>
      <input type="number" name="sizeCounts[]" class="size-count" placeholder="Count (e.g., 5)" min="0" required>
    `;
    container.appendChild(newField);
  }


                    function calculateTotalStock() {
                      const sizeCountFields = document.querySelectorAll('.size-count');
                      let totalStock = 0;

                      sizeCountFields.forEach(field => {
                        const count = parseInt(field.value) || 0;  // Handle empty inputs as 0
                        totalStock += count;
                      });

                      document.getElementById('stock').value = totalStock;  // Update the total stock field
                    }

                    // Add event listeners to initial size fields to calculate total stock
                    document.querySelectorAll('.size-count').forEach(field => {
                      field.addEventListener('input', calculateTotalStock);
                    });
                  </script>





                </div>

              </div>

            </div>
          </div>
